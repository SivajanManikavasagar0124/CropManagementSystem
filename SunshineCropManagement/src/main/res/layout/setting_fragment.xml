<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/realertivelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HomePageColour"
    tools:context=".SettingActivity">


    <TextView
        android:id="@+id/orilock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="236dp"
        android:text="@string/lock_orientation"
        android:fontFamily="@font/poppinsdefault"
        android:textColor="@color/DefaultTitleText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Notificationset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/DefaultTitleText"
        android:layout_marginTop="305dp"
        android:fontFamily="@font/poppinsdefault"
        android:text="@string/enable_notifications"
         />

    <Switch
        android:id="@+id/portlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="232dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="468dp"
        android:text="@string/portrait_mode_only"
        tools:ignore="TouchTargetSizeCheck" />

    <Switch
        android:id="@+id/notficswitch"
        android:layout_width="165dp"
        android:layout_height="21dp"
        android:layout_marginStart="231dp"
        android:layout_marginTop="301dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="403dp"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vectorrectangle"
        android:layout_marginStart="30dp"
        android:layout_marginTop="375dp"/>


    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="415dp"
        android:layout_marginEnd="124dp"
        android:textAlignment="center"
        android:layout_marginBottom="213dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/celsiusButton"
            android:layout_width="match_parent"
            android:fontFamily="@font/poppinsdefault"
            android:layout_height="wrap_content"
            android:text="@string/celsius" />

        <RadioButton
            android:id="@+id/fahrenheitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppinsdefault"
            android:text="@string/fahrenheit"
            tools:ignore="TouchTargetSizeCheck" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="390dp"
        android:fontFamily="@font/poppinsdefault"
        android:text="@string/prefTemp"
        android:textAlignment="center"
        android:textColor="@color/DefaultTitleText" />

</RelativeLayout>