<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HomePageColour"
    tools:context=".ui.ReviewFragment">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_sensorinfo" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="49dp"
        android:src="@drawable/homepagelogo" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:src="@drawable/ic_sensorbox" />

    <TextView
        android:id="@+id/reviewtitle"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/poppinsdefault"
        android:gravity="center"
        android:text="@string/reviewtext"
        android:textColor="@color/black"
        android:textSize="35dp" />

    <EditText
        android:id="@+id/reviewEditTextTextName"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="290dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name : "
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/reviewEditTextTextComment"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="480dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Comment : "
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/reviewEditTextTextEmailAddress"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="350dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email :"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="420dp"
        android:ems="10"
        android:inputType="phone"
        android:text="Phone :"
        tools:ignore="TouchTargetSizeCheck" />


    <Button
        android:id="@+id/reviewbutton"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="560dp"
        android:text="Submit" />



</RelativeLayout>