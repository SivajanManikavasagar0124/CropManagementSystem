<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HomePageColour"
    tools:context=".ui.SoilMoisture.SoilMoisture" >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_sensorinfo" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="46dp"
        android:layout_marginStart="34dp"
        android:src="@drawable/soilmoist" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:src="@drawable/ic_sensorbox" />

    <TextView
        android:id="@+id/soiltitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/poppinsdefault"
        android:gravity="center"
        android:text="Soil Moisture"
        android:textColor="@color/black"
        android:textSize="39dp" />


    <TextView
        android:id="@+id/soilunits"
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/poppinsdefault"
        android:gravity="center"
        android:text="43x"
        android:textColor="@color/purple_500"
        android:textSize="150dp" />

    <TextView
        android:id="@+id/soildescription"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="90dp"
        android:text="Measure moisture with a click of a button!"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/soiltoggletext"
        android:layout_width="193dp"
        android:layout_height="41dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/poppinsdefault"
        android:gravity="center"
        android:text="Connect to sensor: "
        android:textColor="@color/purple_500"
        android:textSize="15dp" />

    <ToggleButton
        android:id="@+id/soiltogglebutton"
        android:layout_width="52dp"
        android:layout_height="37dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="500dp"
        android:text="ToggleButton"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/soilbutton"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="560dp"
        android:text="Measure Moisture" />


</RelativeLayout>