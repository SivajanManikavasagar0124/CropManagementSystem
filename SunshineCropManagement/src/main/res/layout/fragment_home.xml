<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Ivory"
    android:orientation="vertical"
    tools:context=".ui.Home.HomeFragment">


    <Button
        android:id="@+id/waternowButton"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="580dp"
        android:background="@drawable/bg_gradient"
        android:focusable="true"
        android:text="Water Now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/connectionImage"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="374dp"
        android:layout_marginBottom="647dp"
        android:layout_weight="1"
        android:contentDescription="Image that shows the state of the sensor connection"
        android:src="@drawable/redconnection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/connectionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="647dp"
        android:layout_weight="1"
        android:text="Not Connected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="327dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/settingsicon"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/gearicon" />

            <ImageView
                android:id="@+id/levelicon"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/levelicon" />

            <ImageView
                android:id="@+id/wallclockicon"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/wallclockicon" />

            <ImageView
                android:id="@+id/tempicon"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/tempicon" />

            <ImageView
                android:id="@+id/humidicon"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/humidityicon" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="228dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="163dp"
        android:textSize="25dp"
        android:layout_marginEnd="167dp"
        android:textStyle="italic"
        android:layout_marginBottom="533dp"
        android:text="Quick Access"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
