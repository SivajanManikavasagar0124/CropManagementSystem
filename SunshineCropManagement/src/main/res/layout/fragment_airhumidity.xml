<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Ivory"
    tools:context=".ui.AirHumidity.AirHumidity">

    <TextView
        android:id="@+id/text_airhumidityHumid"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="218dp"
        android:layout_marginBottom="609dp"
        android:text="@string/air_humidity_level"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/airHumidityButton"
        android:layout_width="255dp"
        android:layout_height="37dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="283dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="411dp"
        android:text="@string/remeasure_air_humidity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="417dp"
        android:layout_height="244dp"
        android:layout_marginTop="498dp"
        android:src="@drawable/humidity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarAirHumid"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="261dp"
        android:layout_marginBottom="531dp"
        android:progress="75"
        android:rotation="270"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_airhumidityDry"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="218dp"
        android:layout_marginBottom="458dp"
        android:text="@string/dry"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>